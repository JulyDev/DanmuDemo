<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pattern_green"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.pcyan.msgdemo.MainActivity"
    tools:showIn="@layout/activity_dan_mu">

    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/danmakuView"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="180dp"
        />

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="64dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/pattern_green"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:textSize="22sp"
        tools:text="asdfa"
        android:layout_below="@id/iv_test"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_danmu"
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="56dp"
        android:text="Add Danmu"
        android:layout_height="wrap_content" />

</RelativeLayout>